<div id="page" class="row contact-wrapper ">
  <div class="contact-header big-bg">
    <h2 class="league">contact us</h2>
  </div>
  <div class="container">
    <div class="row">
      <div class="pad-wrapper cf">
        <div class="col-md-12">
          <h1>{{ page.title }}</h1>
          <div class="page-with-contact-form">
            {{ page.content }}
                  
              {% form 'contact' %}
              {% if form.posted_successfully? %}
              <div class="successForm feedback">
                <p>{{ 'contact.form.post_success' | t }}</p>
              </div>
              {% endif %}

              {% if form.errors %}
              <div class="errorForm feedback">
                <p>{{ 'contact.form.post_error' | t }}</p>
                {% for field in form.errors %}
                  <p>{{ 'contact.form.post_field_error_html' | t: field: field, error: form.errors.messages[field] }}</p>
                {% endfor %}
              </div>
              {% endif %}

              <div id="contactFormWrapper">
                <p class="form-group">
                  <label>{{ 'contact.form.name' | t }}:</label><br/>
                  <input class="form-control" type="text" id="contactFormName" name="contact[name]" placeholder="{{ 'contact.placeholder.name' | t }}" />
                </p>
                <p class="form-group">
                  <label>{{ 'contact.form.email' | t }}:</label><br/>
                  <input class="form-control" type="email" id="contactFormEmail" name="contact[email]" placeholder="{{ 'contact.placeholder.email' | t }}" />
                </p>
                <p class="form-group">
                  <label>{{ 'contact.form.phone' | t }}:</label><br/>
                  <input class="form-control" type="telephone" id="contactFormTelephone" name="contact[phone]" placeholder="{{ 'contact.placeholder.phone' | t }}" />
                </p> 
                <p class="form-group">
                  <label>{{ 'contact.form.message' | t }}:</label><br/>
                  <textarea  class="form-control" rows="15" cols="75" id="contactFormMessage" name="contact[body]" placeholder="{{ 'contact.placeholder.message' | t }}"></textarea>
                </p>
                <p class="form-group">
                  <input type="submit" id="contactFormSubmit" value="{{ 'contact.form.send' | t }}" class="btn form-control" />
                </p>
              </div>
              {% endform %}
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


